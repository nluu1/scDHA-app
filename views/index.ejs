<!DOCTYPE html>
<html>

<head>
    <title>scDHA</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Include Bootstrap CSS via CDN -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container-fluid row">
        <div class="col-sm-2">
            <div class="mt-5">
                <h1>scDHA</h1>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="inputRadio" id="fileOpt" value="fileOpt" checked>
                    <label class="form-check-label" for="fileOpt">
                        Uploading single-cell RNA-seq matrix (.tsv) file
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="inputRadio" id="datasetOpt" value="datasetOpt">
                    <label class="form-check-label" for="datasetOpt">
                        Use built-in scDHA dataset
                    </label>
                </div>

                <div class="fileOpt-div">
                    <form id="updateForm">
                        <div class="form-group mt-3">
                            <label class="mr-2">Upload single-cell RNA-seq matrix:</label>
                            <input type="file" name="file" accept=".tsv">
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="datasetOpt-div">
                    <hr>
                    <div class="form-group mt-3">
                        <button id="generate" type="button" class="btn btn-primary">Generate
                        </button>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-10">
            <!-- Display the generated PNG image -->
            <div class="row">
                <div class="col-md-auto mt-5">
                    <div id="img-container" class="">
                        <% if (imagePath) { %>
                        <!-- Display the image if imagePath is defined -->
                        <a id="cluster-image-download" href="/images/myw3schoolsimage.jpg" download="">
                            <img id="cluster-image" class="img-fluid"
                                src="data:image/jpeg;base64,<%= imagePath.toString('base64') %>" alt="Uploaded Image">
                        </a>
                        <% } else { %>
                        
                        <a id="cluster-image-download" href="https://placehold.co/600x400?text=Scatter\nPlot" download>
                            <img id="cluster-image" class="" src="https://placehold.co/600x400?text=Scatter\nPlot"
                                alt="Cluster Image">
                        </a>
                        <p>Click Image to Download</p>
                        <% } %>
                    </div>
                    <div class="mt-5">
                        <div class="row g-1">
                            <div class="col">
                                <input type="text" id="height" class="form-control" placeholder="Height" aria-label="Height">
                            </div>
                            <div class="col">
                                <input type="text" id="width" class="form-control" placeholder="Width" aria-label="Width">
                            </div>
                            <button id="convertBtn" type="button" class="col btn btn-primary">Convert
                            </button>
                        </div>
                    </div>
                </div>
                <div id="table-container" class="col mt-5 ">
                    <table id="result-table" class="table table-bordered table-hover">
                        <thead id="table-header">
                            <tr>
                                <!-- Table header will be inserted here -->
                                <td>Gene_ID</td>
                                <td>Cell_Cluster</td>
                            </tr>
                        </thead>
                        <tbody id="table-body">
                            <!-- Table data will be inserted here -->
                            <td>Data</td>
                            <td>Data</td>
                        </tbody>
                    </table>
                    <div class="mt-5">
                         <button id="downloadBtn" type="button" class="col btn btn-primary">Download (.tsv)
                            </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/script.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>